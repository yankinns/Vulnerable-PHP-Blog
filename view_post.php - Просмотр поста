<?php
require_once 'config.php';


$post_id = $_GET['id'] ?? 1;


$sql = "SELECT p.*, u.username FROM posts p 
        LEFT JOIN users u ON p.author_id = u.id 
        WHERE p.id = $post_id";
$result = mysqli_query($conn, $sql);
$post = mysqli_fetch_assoc($result);

// Получение комментариев
$sql_comments = "SELECT * FROM comments WHERE post_id = $post_id ORDER BY created_at DESC";
$comments_result = mysqli_query($conn, $sql_comments);
?>

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title><?php echo $post['title']; ?> - Уязвимый Блог</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="index.php">Уязвимый Блог</a>
            <div class="navbar-nav">
                <a class="nav-link" href="index.php">Главная</a>
                <a class="nav-link" href="search.php">Поиск</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <?php if($post): ?>
            <article>
                <h1><?php echo $post['title']; ?></h1>
                
                <div class="post-content"><?php echo $post['content']; ?></div>
                <p class="text-muted mt-3">
                    Автор: <?php echo htmlspecialchars($post['username']); ?> | 
                    Дата: <?php echo $post['created_at']; ?>
                </p>
            </article>
            
            <hr class="my-4">
            
            <section>
                <h3>Комментарии (<?php echo mysqli_num_rows($comments_result); ?>)</h3>
                
                <?php while($comment = mysqli_fetch_assoc($comments_result)): ?>
                    <div class="card mb-2">
                        <div class="card-body">
                            <strong><?php echo htmlspecialchars($comment['author_name']); ?></strong>
                            <!-- XSS в комментариях -->
                            <p><?php echo $comment['content']; ?></p>
                            <small class="text-muted"><?php echo $comment['created_at']; ?></small>
                        </div>
                    </div>
                <?php endwhile; ?>
            </section>
            
            <section class="mt-4">
                <h4>Добавить комментарий</h4>
                <form action="add_comment.php" method="POST">
                    <input type="hidden" name="post_id" value="<?php echo $post_id; ?>">
                    <div class="mb-3">
                        <input type="text" class="form-control" name="author_name" placeholder="Ваше имя" required>
                    </div>
                    <div class="mb-3">
                        <textarea class="form-control" name="content" rows="3" placeholder="Текст комментария" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Отправить</button>
                </form>
            </section>
        <?php else: ?>
            <div class="alert alert-danger">Пост не найден!</div>
        <?php endif; ?>
    </div>
</body>
</html>
