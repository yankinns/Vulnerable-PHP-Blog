<?php
require_once 'config.php';

$results = [];
if (isset($_GET['q'])) {
    $query = $_GET['q'];
    
    $sql = "SELECT * FROM posts WHERE title LIKE '%$query%' OR content LIKE '%$query%'";
    $result = mysqli_query($conn, $sql);
    
    while($row = mysqli_fetch_assoc($result)) {
        $results[] = $row;
    }
}
?>

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Поиск - Уязвимый Блог</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="index.php">Уязвимый Блог</a>
            <div class="navbar-nav">
                <a class="nav-link" href="index.php">Главная</a>
                <a class="nav-link active" href="search.php">Поиск</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h1>Поиск по блогу</h1>
        
        <form method="GET" class="mb-4">
            <div class="input-group">
                <input type="text" class="form-control" name="q" 
                       value="<?php echo $_GET['q'] ?? ''; ?>" 
                       placeholder="Введите поисковый запрос..." required>
                <button class="btn btn-primary" type="submit">Найти</button>
            </div>
        </form>
        
        <?php if(isset($_GET['q'])): ?>
            <h3>Результаты поиска для "<?php echo htmlspecialchars($_GET['q']); ?>":</h3>
            
            <?php if(count($results) > 0): ?>
                <?php foreach($results as $post): ?>
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="view_post.php?id=<?php echo $post['id']; ?>">
                                    <?php echo $post['title']; ?>
                                </a>
                            </h5>
                            <p class="card-text"><?php echo $post['content']; ?></p>
                        </div>
                    </div>
                <?php endforeach; ?>
            <?php else: ?>
                <div class="alert alert-info">Ничего не найдено.</div>
            <?php endif; ?>
        <?php endif; ?>
    </div>
</body>
</html>
